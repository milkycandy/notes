/* 方案一：紫藤与晨雾 */
:root {
  --vp-c-brand-1: #9b88c2;  /* 主色：紫藤 (Wisteria) */
  --vp-c-brand-2: #7c6b9e;  /* 深色：暗紫晶 (Dark Amethyst) */
  --vp-c-brand-3: #e5e1ef;  /* 亮色：晨雾 (Morning Mist) */
}

.dark {
  --vp-c-brand-1: #b9a8e0;  /* 主色：亮紫藤 (Light Wisteria) */
  --vp-c-brand-2: #9b88c2;  /* 深色：紫藤 (Wisteria) */
  --vp-c-brand-3: #d2c9ec;  /* 亮色：淡紫雾 (Pale Lavender Mist) */
}
/* 方案二：晴空与纸页 */
:root {
  --vp-c-brand-1: #6fa8dc;  /* 主色：晴空蓝 (Clear Sky Blue) */
  --vp-c-brand-2: #5289b9;  /* 深色：海风蓝 (Sea Breeze Blue) */
  --vp-c-brand-3: #dce8f5;  /* 亮色：纸页白 (Paper White) */
}

.dark {
  --vp-c-brand-1: #8ac0f2;  /* 主色：亮晴空 (Bright Clear Sky) */
  --vp-c-brand-2: #6fa8dc;  /* 深色：晴空蓝 (Clear Sky Blue) */
  --vp-c-brand-3: #b6d5f7;  /* 亮色：天青石 (Celestine) */
}
/* 方案三：薄荷与冰川 */
:root {
  --vp-c-brand-1: #64b5a9;  /* 主色：薄荷青 (Mint Teal) */
  --vp-c-brand-2: #4a8f85;  /* 深色：深海松 (Deep Sea Pine) */
  --vp-c-brand-3: #d9e9e6;  /* 亮色：冰川白 (Glacier White) */
}

.dark {
  --vp-c-brand-1: #85d1c5;  /* 主色：亮薄荷 (Light Mint) */
  --vp-c-brand-2: #64b5a9;  /* 深色：薄荷青 (Mint Teal) */
  --vp-c-brand-3: #aedbd4;  /* 亮色：冰晶 (Ice Crystal) */
}